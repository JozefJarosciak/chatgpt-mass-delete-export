{
  "manifest_version": 3,
  "name": "ChatGPT Mass Delete/Export Chats",
  "version": "1.0.0",
  "description": "Delete and export your ChatGPT conversations in bulk. Batch delete conversations or export them to ZIP files with all text content.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "ChatGPT Mass Delete/Export Chats",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "author": "jarosciak@gmail.com"
}
